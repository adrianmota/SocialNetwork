@using SocialNetwork.Core.Application.ViewModels.Users
@model ResetUserPasswordViewModel
@{
    ViewData["Title"] = "Restablecer contraseña";
}

<div class="container-fluid">
    <div class="row m-5">
        <h2 class="text-center">Restablecer contraseña</h2>
    </div>
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card shadow-sm">
                <div class="card-header text-black">
                    <h4 class="text-center">Introduce tu nombre de usuario</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="User" asp-action="ResetPassword">
                        @Html.ValidationSummary(false, "", new {@class = "text-danger"})
                        <div class="mb-3">
                            <input asp-for="Username" class="form-control"/>
                        </div>

                        <button class="btn btn-primary" type="submit">Reestablecer</button>
                        <a class="btn btn-secondary" asp-controller="User" asp-action="Index">Volver atrás</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>